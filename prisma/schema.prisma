generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model Appointment {
  id        String   @id @default(cuid())
  name      String
  phone     String
  petName   String
  service   String
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
