// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Appointment {
  id        String   @id @default(cuid())
  ownerName String
  phone     String
  petName   String
  petBreed  String
  date      String
  notes     String?
  // DÜZELTME: Kod tarafıyla aynı olması için varsayılanı güncelledik
  status    String   @default("Talep Bekliyor") 
  createdAt DateTime @default(now())
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String
  // DÜZELTME: Okunma bilgisi eklendi
  isRead    Boolean  @default(false) 
  createdAt DateTime @default(now())
}

// DÜZELTME: Tek bir ayar tablosu kullanacağız (SiteSetting)
model SiteSetting {
  id           Int    @id @default(1)
  heroVideoUrl String @default("/kopek1video.mp4")
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Decimal?
  images      String[] @default([])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}